<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Show All</title>
    <style>
        .index {

            margin-top: 10px;
            text-align: center;
        }

        .card {

            margin-top: 10px;
            width: 300px;
            height: auto;
        }

        .grid-container {
            display: grid;
            grid-template-columns: auto auto auto auto;
            padding: 10px;
        }

        .grid-item {
            margin-left: 30px;
            margin-top: 30px;
            border: 1px solid gray;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            font-size: 30px;
            text-align: center;
        }
    </style>
</head>
<body>


<div class="container">
    <% include nav.ejs %>
    <h3 style="text-align: center;margin-top: 10px">All List Car</h3>
    <div class="grid-container">
        <% for(var i = 0;i < data.length;i++){ %>
        <div class="grid-item">
            <div>
                <img src="<%= data[i].url %>" style="width: 300px; height: auto" alt="">
                <h4><%= data[i].name %></h4>
                <h5><%= data[i].content %></h5>
            </div>
           <div>
               <form action="/delete" method="post">
                   <input type="hidden" name="id" value="<%=data[i]._id%>">
                   <button class="btn btn-danger" name="deletes">Delete</button>
               </form>
               <form action="/update" method="post" >
                   <input type="hidden" name="idUp" value="<%=data[i]._id%>">
                   <button class="btn btn-info" name="update">Update</button>
               </form>
           </div>

        </div>
        <% } %>
    </div>
</div>

</body>
</html>